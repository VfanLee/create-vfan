{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "esnext"],
    "module": "nodenext",
    "outDir": "dist",

    // Bundler mode
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": ["node"]
  },
  "include": ["src"]
}
