{
  "name": "create-vfan",
  "version": "0.5.2",
  "description": "Vfan Lee's Projects CLI",
  "keywords": [
    "vfanlee",
    "create-vfan",
    "cli"
  ],
  "license": "MIT",
  "author": {
    "name": "Vfan Lee",
    "url": "https://github.com/VfanLee"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VfanLee/create-vfan.git"
  },
  "bugs": {
    "url": "https://github.com/VfanLee/create-vfan/issues"
  },
  "homepage": "https://github.com/VfanLee/create-vfan#readme",
  "type": "module",
  "bin": {
    "create-vfan": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "start": "node scripts/build.js && node dist/index.js",
    "build": "node scripts/build.js",
    "format": "prettier --write src/**/*.{ts,js,json,md} scripts/**/*.{ts,js}",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "version": "pnpm changelog"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "scripts/**/*.{ts,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.3",
    "inquirer": "^12.11.1",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.28",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.25.12",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
